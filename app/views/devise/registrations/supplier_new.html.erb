<h2>Supplier Sign up</h2>
<div class="limiter">
  <div class="beg">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'sign'}) do |f| %>
  <%= devise_error_messages! %>

<div class="wrap-input100 validate-input m-t-85 m-b-35">
    <%= f.label :Name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: 'input100' %>
    <span class="focus-input100"></span>
  </div>

<div class="wrap-input100 validate-input m-t-85 m-b-35">
    <%= f.label :Contact_Number %><br />
    <%= f.text_field :contact_no, autofocus: true, autocomplete: "contact_no", :required => true, class: 'input100' %>
    <span class="focus-input100"></span>
  </div>

<div class="wrap-input100 validate-input m-t-85 m-b-35">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :required => true, class: 'input100' %>
    <span class="focus-input100"></span>
  </div>

<div class="wrap-input100 validate-input m-t-85 m-b-35">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :required => true, class: 'input100' %>
    <span class="focus-input100"></span>
  </div>

<div class="wrap-input100 validate-input m-t-85 m-b-35">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :required => true, class: 'input100' %>
    <span class="focus-input100"></span>
  </div> 

<%= f.hidden_field :master_role_id, value: '2' %>


 
  <div class="actions">
    <%= f.submit "Sign up", class: "but"  %>
  </div>
<% end %>
</div>
</div>
<%= render "devise/shared/links" %>