<script type="text/javascript">
  $(document).ready(function(){
    $('.sign').validate({
     lang: 'en'
    });
     $( "#email" ).rules( "add", {
  required: true,
  messages: {
    required: "*email is required",
  
  }
  });
    $( "#password" ).rules( "add", {
  required: true,
  messages: {
    required: "*Password is required",
  
  }
  });
        $( "#name" ).rules( "add", {
    required: true,
    maxlength: 20,
    minlength: 4,
     lettersonly: true,
  messages: {
    required: "*Name is mandatory"
  }
  });
            $( "#password" ).rules( "add", {
    required: true,
  messages: {
    required: "*Password is mandatory"
  }
  });
    $( "#password_confirmation" ).rules( "add", {
    required: true,
  messages: {
    required: "*Password Confirmation is mandatory"
  }
  });
    $( "#contact_number" ).rules( "add", {
    required: true,
    maxlength: 13,
    minlength: 10,
  messages: {
    required: "*Contact number is mandatory"
  }
  });
  });
</script>