<div class="container-fluid" style="background-color: #999999;">
    <div class="l1">
    <div class="container-login100">
      <div class="login100-more" style="opacity:0.6; background-image: url('/assets/k1.jpg');">
         <!-- <div class="img-title">Welcome to tiffindian,
          <br />Thank you!
      </div> -->
</div>
      <div class="wrap-login100" >
<span class="login100-form-title">User Sign up</span>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'sign'}) do |f| %>
<div class="wrap-input100 validate-input">
    <label class="label-input100" for="user_Name">Name</label>
    <input class="input100 out" autofocus="autofocus" autocomplete="name" required="required" id="name" type="text" name="user[name]" aria-required="true" onfocus="this.placeholder=''" onblur="this.placeholder='name...'" placeholder="name...">
    <span class="focus-input100"></span>
    <p class='error'><%= show_errors(@user, :name) %></p>
</div>

<div class="wrap-input100 validate-input">
    <label class="label-input100" for="user_Contact_Number">Contact number</label>
    <input class="input100 out" autofocus="autofocus" autocomplete="contact_no" required="required" id="contact_number" type="text" name="user[contact_no]" aria-required="true" onfocus="this.placeholder=''" onblur="this.placeholder='contact number...'"  placeholder="contact number...">
    <span class="focus-input100"></span>
    <p class='error'><%= show_errors(@user, :contact_no) %></p>
 </div> 

<div class="wrap-input100 validate-input">
    <label class="label-input100" for="user_email">Email</label>
   <input class="input100 out" autofocus="autofocus" autocomplete="email" required="required" id="email" type="email" value="" name="user[email]" aria-required="true" onfocus="this.placeholder=''" onblur="this.placeholder='email...'" placeholder="email...">
   <span class="focus-input100"></span>
    <p class='error'><%= show_errors(@user, :email) %></p>
</div>

<div class="wrap-input100 validate-input">
    <label class="label-input100" for="user_password">Password</label>
  <!--   <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %> -->
   <input class="input100 out" autocomplete="off" required="required" id="password" type="password" name="user[password]" aria-required="true" onfocus="this.placeholder=''" onblur="this.placeholder='password...'" placeholder="password...">
    <span class="focus-input100"></span>
    <p class='error'><%= show_errors(@user, :password) %></p>
</div>

<div class="wrap-input100 validate-input">
    <label class="label-input100" for="user_password_confirmation">Password confirmation</label>
  <input class="input100 out" autocomplete="off" required="required" id="password_confirmation" type="password" name="user[password_confirmation]" aria-required="true" onfocus="this.placeholder=''" onblur="this.placeholder='password confirmation...'" placeholder="password confirmation...">
  <span class="focus-input100"></span>
    <p class='error'><%= show_errors(@user, :password_confirmation) %></p>
</div>
<%= f.hidden_field :master_role_id, value: '3' %>

  <div class="container-login100-form-btn">
            <div class="wrap-login100-form-btn">
              <div class="login100-form-bgbtn"></div>
  <input class="login100-form-btn" type="submit" name="commit" value="Sign up" data-disable-with="Sign up">
</div>
<a class="dis-block hov1" href="/users/sign_in">Log in<i class="glyphicon glyphicon-hand-right mar-l"></i></a>
</div>
  
<% end %>
</div>
</div>
</div>
</div>
