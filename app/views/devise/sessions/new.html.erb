<div class="container pad top1">
    <div class="pad col-lg-6 col-md-6 col-sm-6 hidden-xs">
      <img src="/assets/tap.jpg" class="img-responsive top">
    </div>

  <div class="pad hei col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <div class="lo-form">
      <span class="log-form-title">Account Login</span>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="pad col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Name", class: "ik" %>
  </div>

    <div class="pad col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "ik" %>
  </div>


  <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
  <% end -%>
  <div class="actions" >
    <%= f.submit "Sign In", class: "sig" %>
  </div>
<% end %>
<div class="pad col-lg-6 col-md-6 col-sm-6 col-xs-8">
<%= link_to "Forgot your password?", new_password_path(resource_name), class: "up" %> 
</div>
  <div class="pad col-lg-6 col-md-6 col-sm-6 col-xs-4">
<%= link_to "Sign up", new_registration_path(resource_name), class: "down" %>
</div>
</div>
</div>
</div>