<div class="container pad">
    <div class="pad col-lg-6 col-md-6 col-sm-6 hidden-xs">
      <img src="/assets/gud.jpg" class="img-responsive">
    </div>

  <div class="pad col-lg-6 col-md-6 col-sm-6 col-xs-12" style="padding-bottom: 200px;">
    <div class="lo-form">
      <span class="log-form-title">Account Login</span>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="pad col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Name", class: "ik" %>
  </div>

    <div class="pad col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "ik" %>
  </div>


  <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
  <% end -%>
  <div class="actions" >
    <%= f.submit "Sign In", class: "sig" %>
  </div>
<% end %>
<div class="pad col-lg-12 col-md-12 col-sm-12 col-xs-12">
<%= link_to "Forgot your password?", new_password_path(resource_name), class: "up" %> </div>
<div>
  <div class="pad co col-lg-12 col-md-12 col-sm-12 col-xs-12">
<%= link_to "Sign up", new_registration_path(resource_name), class: "down" %>
</div>
</div>
</div>
</div>
</div>