<script>
   $(window).scroll(function() {
   if ($(this).scrollTop() > 50){
      $('nav').addClass("on");
   } else {
      $('nav').removeClass("on");
   }
});


    $(window).bind("turbolinks:load", function(){
              var wn = $(window).height();
              var ft = $('.foo').height();
              var h = $('.navbar').height();
              var calculate = wn - ft - h ;
              $(".wrapper").css("min-height",calculate);
            });

            window.onresize = resize;
function resize() {
   var wn = $(window).height();
              var ft = $('.foo').height();
              var h = $('.navbar').height();
              var calculate = wn - ft - h ;
              $(".wrapper").css("min-height",calculate);
}
</script>